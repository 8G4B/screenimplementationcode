--회원정보 테이블 생성: MEMBER_TBL_02
CREATE TABLE MEMBER_TBL_02(
	CUSTNO NUMBER(6) NOT NULL, 
	CUSTNAME VARCHAR2(20),
	PHONE VARCHAR2(13),
	ADDRESS VARCHAR2(60),
	JOINDATE DATE,
	GRADE CHAR(1),
	CITY CHAR(2),
	PRIMARY KEY(CUSTNO)
);

--회원정보 테이블 제거
DROP TABLE MEMBER_TBL_02;

