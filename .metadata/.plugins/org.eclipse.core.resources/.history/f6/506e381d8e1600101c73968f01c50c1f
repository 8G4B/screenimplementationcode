-- 매출 테이블 생성
CREATE TABLE MONEY_TBL_02
(
    CUSTNO  NUMBER(6) NOT NULL,
    SALENOL NUMBER(8) NOT NULL,
    PCOST   NUMBER(8),
    AMOUNT  NUMBER(4),
    PRICE   NUMBER(8),
    PCODE   VARCHAR2(4),
    SDATE   DATE,
    CONSTRAINT MONEY_TBL_02_PK PRIMARY KEY (CUSTNO, SALENOL)
);

-- 매출정보 샘플 데이터 입력
